  position: absolute;
  width:375rpx;
  height: 125rpx;
  left: 0;
  top: 25rpx;
}
.repairBox{
  position: absolute;
  width:375rpx;
  height: 125rpx;
  left: 375rpx;
  top: 25rpx;
}
.bar_box .barBg{
  position:absolute;width:100%;height:150rpx;top:0;
  z-index: 1;
}
.bar_box .bar1 {
  position:absolute;width:40rpx;top:19rpx;
