<!--pages/components/orderItem/orderItem.wxml-->
<view class='order-item custom-class'>
  <text class="{{noBorder?'no-border item-title':'item-title'}}">{{item.title}}</text>
  <view class='item-detail'>
    <text class='row'>所属展厅:{{item.zhanting}}</text>
    <text class='row'>订单号:{{item.orderNo}}</text>
    <text class='row'>铭牌号:{{item.mingpaihao}}</text>
    <text class='row'>客户名称:{{item.name}}</text>
    <text class='row'>客户电话1:{{item.tel1}}</text>
    <text class='row'>客户电话2:{{item.tel2}}</text>
    <text class='row'>客户地址:{{item.address}}</text>
    <text class='row'>客户付款日期:{{item.date}}</text>
  </view>
  
  <slot></slot>
</view>