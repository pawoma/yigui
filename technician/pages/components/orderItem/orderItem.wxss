.order-item {
  padding: 0 40rpx;
  width: 100%;
  padding-top: 20rpx;
  border-top: solid 21rpx #c8c9ca;
}

.order-item .item-title {
  font-size: 28rpx;
  display: block;
  padding: 10rpx 0;
  padding-left: 10rpx;
  border-bottom: solid 3rpx #c9c9ca;
}

.order-item .no-border {
  border-bottom: none;
}

.order-item .item-detail {
  color: #9f9fa0;
  line-height: 1.6;
  font-size: 24rpx;
  margin-top: 20rpx;
  padding-left: 10rpx;
}

.order-item .item-detail .row {
  display: block;
}

.btn {
  width: 230rpx;
  text-align: center;
  border-radius: 32rpx;
  line-height: 46rpx;
  margin: 60rpx auto;
  font-size: 26rpx;
}

.progress{
  border-color:#c8c9ca;
}
.progress .btn{
  background:#c8c9ca;
}
.done{
  border-color:#54C2F1;
}
.done .btn{
  background:#54C2F1;
  color:white;
}
.repair{
  border-color:#FCD58C;
}
.repair .btn{
  background:#FCD58C;
}